<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_orders">

    <fragment
        android:id="@+id/navigation_orders"
        android:name="com.delivery.rider.ui.orders.OrdersFragment"
        android:label="@string/nav_orders"
        tools:layout="@layout/fragment_orders">
        <action
            android:id="@+id/action_orders_to_details"
            app:destination="@id/navigation_order_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_tracking"
        android:name="com.delivery.rider.ui.tracking.TrackingFragment"
        android:label="@string/nav_tracking"
        tools:layout="@layout/fragment_tracking" />

    <fragment
        android:id="@+id/navigation_earnings"
        android:name="com.delivery.rider.ui.earnings.EarningsFragment"
        android:label="@string/nav_earnings"
        tools:layout="@layout/fragment_earnings" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.delivery.rider.ui.profile.ProfileFragment"
        android:label="@string/nav_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_order_details"
        android:name="com.delivery.rider.ui.orders.OrderDetailFragment"
        android:label="@string/order_detail_title"
        tools:layout="@layout/fragment_order_details">
        <argument
            android:name="orderId"
            app:argType="string" />
    </fragment>

</navigation>
